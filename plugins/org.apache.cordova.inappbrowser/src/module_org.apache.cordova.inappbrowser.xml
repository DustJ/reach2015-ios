<?xml version="1.0" encoding="UTF-8"?>
<project name="module_org.apache.cordova.inappbrowser" default="compile.module.org.apache.cordova.inappbrowser">
  <dirname property="module.org.apache.cordova.inappbrowser.basedir" file="${ant.file.module_org.apache.cordova.inappbrowser}"/>
  
  <property name="module.jdk.home.org.apache.cordova.inappbrowser" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.org.apache.cordova.inappbrowser" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.org.apache.cordova.inappbrowser" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.org.apache.cordova.inappbrowser" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="org.apache.cordova.inappbrowser.output.dir" value="${module.org.apache.cordova.inappbrowser.basedir}/../../../out/production/org.apache.cordova.inappbrowser"/>
  <property name="org.apache.cordova.inappbrowser.testoutput.dir" value="${module.org.apache.cordova.inappbrowser.basedir}/../../../out/test/org.apache.cordova.inappbrowser"/>
  
  <path id="org.apache.cordova.inappbrowser.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="org.apache.cordova.inappbrowser.module.production.classpath">
    <path refid="${module.jdk.classpath.org.apache.cordova.inappbrowser}"/>
    <path refid="library.classes.classpath"/>
    <pathelement location="${cordovalib.output.dir}"/>
  </path>
  
  <path id="org.apache.cordova.inappbrowser.runtime.production.module.classpath">
    <pathelement location="${org.apache.cordova.inappbrowser.output.dir}"/>
    <path refid="library.classes.classpath"/>
    <path refid="cordovalib.runtime.production.module.classpath"/>
  </path>
  
  <path id="org.apache.cordova.inappbrowser.module.classpath">
    <path refid="${module.jdk.classpath.org.apache.cordova.inappbrowser}"/>
    <pathelement location="${org.apache.cordova.inappbrowser.output.dir}"/>
    <path refid="library.classes.classpath"/>
    <pathelement location="${cordovalib.testoutput.dir}"/>
    <pathelement location="${cordovalib.output.dir}"/>
  </path>
  
  <path id="org.apache.cordova.inappbrowser.runtime.module.classpath">
    <pathelement location="${org.apache.cordova.inappbrowser.testoutput.dir}"/>
    <pathelement location="${org.apache.cordova.inappbrowser.output.dir}"/>
    <path refid="library.classes.classpath"/>
    <path refid="cordovalib.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.org.apache.cordova.inappbrowser">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.org.apache.cordova.inappbrowser">
    <patternset refid="excluded.from.module.org.apache.cordova.inappbrowser"/>
  </patternset>
  
  <path id="org.apache.cordova.inappbrowser.module.sourcepath">
    <dirset dir="${module.org.apache.cordova.inappbrowser.basedir}">
      <include name="amazon"/>
      <include name="android"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.org.apache.cordova.inappbrowser" depends="compile.module.org.apache.cordova.inappbrowser.production,compile.module.org.apache.cordova.inappbrowser.tests" description="Compile module org.apache.cordova.inappbrowser"/>
  
  <target name="compile.module.org.apache.cordova.inappbrowser.production" depends="register.custom.compilers,compile.module.cordovalib" description="Compile module org.apache.cordova.inappbrowser; production classes">
    <mkdir dir="${org.apache.cordova.inappbrowser.output.dir}"/>
    <javac2 destdir="${org.apache.cordova.inappbrowser.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.org.apache.cordova.inappbrowser}/javac">
      <compilerarg line="${compiler.args.org.apache.cordova.inappbrowser}"/>
      <bootclasspath refid="org.apache.cordova.inappbrowser.module.bootclasspath"/>
      <classpath refid="org.apache.cordova.inappbrowser.module.production.classpath"/>
      <src refid="org.apache.cordova.inappbrowser.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.org.apache.cordova.inappbrowser"/>
    </javac2>
    
    <copy todir="${org.apache.cordova.inappbrowser.output.dir}">
      <fileset dir="${module.org.apache.cordova.inappbrowser.basedir}/amazon">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.org.apache.cordova.inappbrowser.basedir}/android">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.org.apache.cordova.inappbrowser.tests" depends="register.custom.compilers,compile.module.org.apache.cordova.inappbrowser.production" description="compile module org.apache.cordova.inappbrowser; test classes" unless="skip.tests"/>
  
  <target name="clean.module.org.apache.cordova.inappbrowser" description="cleanup module">
    <delete dir="${org.apache.cordova.inappbrowser.output.dir}"/>
    <delete dir="${org.apache.cordova.inappbrowser.testoutput.dir}"/>
  </target>
</project>